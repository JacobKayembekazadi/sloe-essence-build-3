<header class="header sticky top-0 bg-background/80 backdrop-blur-md border-b border-border z-50">
  <nav class="max-w-container mx-auto flex justify-between items-center py-5 px-4 sm:px-6 lg:px-8">
    <!-- Left: Logo -->
    <div class="flex items-center">
      <a href="{{ routes.root_url }}" class="font-display font-bold text-2xl text-text">
        {%- if section.settings.logo != blank -%}
          <img src="{{ section.settings.logo | image_url: width: 150 }}" 
               alt="{{ shop.name }}" 
               width="150" 
               height="auto"
               loading="lazy">
        {%- else -%}
          {{ section.settings.logo_text | default: shop.name }}
        {%- endif -%}
      </a>
    </div>

    <!-- Center: Desktop Navigation -->
    <div class="hidden md:flex gap-8">
      {%- for link in section.settings.main_menu.links -%}
        <a href="{{ link.url }}" class="nav-link text-md font-medium text-text hover:text-primary transition-colors">
          {{ link.title }}
        </a>
      {%- endfor -%}
    </div>

    <!-- Right: Icons & Mobile Menu Button -->
    <div class="flex items-center gap-4">
      {%- if section.settings.enable_search -%}
        <button class="hidden md:block hover:opacity-70 transition-opacity" type="button" onclick="openSearch()">
          {% render 'icon', icon: 'search' %}
        </button>
      {%- endif -%}
      
      {%- if shop.customer_accounts_enabled -%}
        <a href="{{ routes.account_url }}" class="hover:opacity-70 transition-opacity">
          {% render 'icon', icon: 'user' %}
        </a>
      {%- endif -%}
      
      <button class="hover:opacity-70 transition-opacity" type="button" data-cart-drawer-open>
        {% render 'icon', icon: 'cart' %}
        {%- if cart.item_count > 0 -%}
          <span class="cart-count" data-cart-count>{{ cart.item_count }}</span>
        {%- endif -%}
      </button>
      
      <button
        class="md:hidden"
        data-mobile-menu-toggle
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <span class="menu-icon">{% render 'icon', icon: 'menu' %}</span>
        <span class="close-icon hidden">{% render 'icon', icon: 'close' %}</span>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="mobile-menu md:hidden bg-background border-t border-border" data-mobile-menu>
    <div class="flex flex-col space-y-4 p-4">
      {%- for link in section.settings.main_menu.links -%}
        <a href="{{ link.url }}" class="block py-2 text-md font-medium text-text hover:text-primary transition-colors">
          {{ link.title }}
        </a>
      {%- endfor -%}
      
      {%- if section.settings.enable_search -%}
        <button class="block py-2 text-md font-medium text-text hover:text-primary transition-colors text-left">
          Search
        </button>
      {%- endif -%}
    </div>
  </div>
</header>

{% stylesheet 'section-header.css' | asset_url | stylesheet_tag %}
{% javascript 'section-header.js' | asset_url | script_tag %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "Sloe Essence"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    }
  ]
}
{% endschema %}