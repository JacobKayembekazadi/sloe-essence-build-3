{{ 'section-brand-story.css' | asset_url | stylesheet_tag }}

<section class="brand-story bg-background py-24 sm:py-32">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      {%- if section.settings.image != blank -%}
        <div class="aspect-w-4 aspect-h-3 {% if section.settings.image_position == 'right' %}order-last{% endif %}">
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | default: section.settings.heading }}"
            class="w-full h-full object-cover rounded-sloe-card"
            width="800"
            height="600"
            loading="lazy"
          >
        </div>
      {%- endif -%}
      
      <div class="{% if section.settings.image_position == 'right' %}order-first{% endif %}">
        <h2 class="font-display font-bold text-3xl sm:text-4xl text-text">
          {{ section.settings.heading | default: 'Expert Skincare. For Everyone.' }}
        </h2>
        
        {%- if section.settings.text != blank -%}
          <div class="mt-6 text-lg text-text/80 prose">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
          <div class="mt-10">
            <a
              href="{{ section.settings.button_url }}"
              class="inline-block bg-background text-text border border-text font-semibold py-[14px] px-[28px] rounded-sloe transition-colors hover:bg-text hover:text-background"
            >
              {{ section.settings.button_text }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .brand-story {
    background-color: var(--color-background);
    padding: 6rem 0 8rem;
  }

  .brand-story h2 {
    font-family: var(--font-heading-family);
    font-weight: 700;
    font-size: 1.875rem;
    color: var(--color-text);
  }

  .brand-story .prose p {
    margin-bottom: 1rem;
  }

  .brand-story .prose p:last-child {
    margin-bottom: 0;
  }

  .brand-story .btn-outline {
    display: inline-block;
    background-color: transparent;
    color: var(--color-text);
    border: 1px solid var(--color-text);
    font-weight: 600;
    padding: 0.875rem 1.75rem;
    border-radius: var(--border-radius-sloe);
    text-decoration: none;
    transition: all 0.15s ease-in-out;
  }

  .brand-story .btn-outline:hover {
    background-color: var(--color-text);
    color: var(--color-background);
  }

  @media (min-width: 640px) {
    .brand-story {
      padding: 8rem 0;
    }

    .brand-story h2 {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .brand-story .content-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "Brand story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Expert Skincare. For Everyone."
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We're democratizing skincare by blending the best of nature—pure, organic ingredients—with the power of AI. We're your partner in skin health, here to provide a smarter, more personal path to your best skin.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Learn Our Mission"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Brand story"
    }
  ]
}
{% endschema %}