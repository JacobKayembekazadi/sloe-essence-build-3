{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer bg-[#1D1D1F] text-white">
  <div class="max-w-container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div {{ block.shopify_attributes }}>
              <h4 class="font-display font-bold text-lg mb-4">{{ block.settings.heading }}</h4>
              {%- if block.settings.menu != blank -%}
                <ul class="space-y-3">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li>
                      <a href="{{ link.url }}" class="footer-link text-white/70 hover:text-white transition-colors">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'social' -%}
            <div {{ block.shopify_attributes }}>
              <h4 class="font-display font-bold text-lg mb-4">{{ block.settings.heading | default: 'Follow Us' }}</h4>
              <div class="flex space-x-4">
                {%- if block.settings.instagram_url != blank -%}
                  <a href="{{ block.settings.instagram_url }}" aria-label="Instagram" target="_blank" rel="noopener">
                    {% render 'icon', icon: 'instagram' %}
                  </a>
                {%- endif -%}
                
                {%- if block.settings.tiktok_url != blank -%}
                  <a href="{{ block.settings.tiktok_url }}" aria-label="TikTok" target="_blank" rel="noopener">
                    {% render 'icon', icon: 'tiktok' %}
                  </a>
                {%- endif -%}
                
                {%- if block.settings.facebook_url != blank -%}
                  <a href="{{ block.settings.facebook_url }}" aria-label="Facebook" target="_blank" rel="noopener">
                    {% render 'icon', icon: 'facebook' %}
                  </a>
                {%- endif -%}
              </div>
            </div>

          {%- when 'text' -%}
            <div {{ block.shopify_attributes }}>
              <h4 class="font-display font-bold text-lg mb-4">{{ block.settings.heading }}</h4>
              <div class="text-white/70">
                {{ block.settings.text }}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/20 text-center text-sm text-white/50">
      {%- if section.settings.show_payment_icons -%}
        <div class="flex justify-center space-x-4 mb-4">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_img_tag: class: 'payment-icon' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
      
      <p>
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. 
        {{ section.settings.copyright_text | default: 'All rights reserved.' }}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #1D1D1F;
    color: #ffffff;
  }

  .footer h4 {
    font-family: var(--font-heading-family);
    font-weight: 700;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.15s ease-in-out;
  }

  .footer-link:hover {
    color: #ffffff;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social a {
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.15s ease-in-out;
  }

  .footer-social a:hover {
    color: #ffffff;
  }

  .payment-icon {
    height: 24px;
    width: auto;
  }

  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }
</style>

